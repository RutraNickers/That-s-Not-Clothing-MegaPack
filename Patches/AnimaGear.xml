<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Simple Slavery Collars Patch -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anima Gear</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_AnimaCrown"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_AnimaWarMask"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_AnimaWarVeil"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>