<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Simple Slavery Collars Patch -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Slavery Collars</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_SlaveCollar_Explosive"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_SlaveCollar_Electric"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_SlaveCollar_Crypto"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				<!--
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_SlaveCollar_Heavy"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
				-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_SlaveCollar_Tribal"]/apparel</xpath>
					<value>
					  <countsAsClothingForNudity>false</countsAsClothingForNudity>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>